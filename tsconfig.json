// types in src/index.d.ts
{
  "include": [
    "./src/**/*.ts"
  ],
  "esModuleInterop": true,
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "removeComments": true,
    "noEmitOnError": true,
    "strict": true,
    "outDir": "./dist",
  },
  "exclude": [
    "node_modules"
  ],
}
